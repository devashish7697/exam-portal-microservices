# ---------- Stage 1: Build ----------
FROM maven:3.9.6-eclipse-temurin-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# ---------- Stage 2: Run ----------
FROM eclipse-temurin:17-jdk
WORKDIR /app
COPY --from=build /app/target/Questionservice.jar question-service.jar

# Profile is set to docker (so it reads application-docker.properties)
ENTRYPOINT ["java", "-jar", "-Dspring.profiles.active=docker", "question-service.jar"]